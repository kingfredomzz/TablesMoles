<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:scrollbars="vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:background="#2f3d47">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"

                  android:layout_width="250dp"

                  android:background="#3b4e5b"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/circle"
            android:layout_height="40dp">
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="transition metal"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/actinied_circle"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="actinoid"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/lanthanoid_circle"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="lanthanoid"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/halogens_circle"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="halogen"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/alkali_metal_circle"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="alkali metal"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:id="@+id/textView4"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/alkine_earth_circle"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="alkaline earth metal"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:id="@+id/textView6"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="40dp"
            android:background="@drawable/gas_circle"
            android:layout_height="40dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="noble gas"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"

                android:layout_width="40dp"
                android:background="@drawable/nonmetal_circle"
                android:layout_height="40dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="nonmetal"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"

                android:layout_width="40dp"
                android:background="@drawable/metalloid_circle"
                android:layout_height="40dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="metalloid"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"

                android:layout_width="40dp"
                android:background="@drawable/metal_circle"
                android:layout_height="40dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="metal"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                />
        </LinearLayout>




    </LinearLayout>
    </ScrollView>
